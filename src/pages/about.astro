---
import AboutCta from "@/layouts/components/about/AboutCta.astro";
import Hero from "@/layouts/components/about/Hero.astro";
import Offering from "@/layouts/components/about/Offering.astro";
import Brand from "@/layouts/components/Brand.astro";
import Base from "@/layouts/Base.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const about = (await getEntry("about", "-index")) as CollectionEntry<"about">;
const {
  title,
  description,
  meta_title,
  image,
  hero,
  offering,
  call_to_action,
} = about.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <Hero hero={hero} />
  <Offering offering={offering} />
  <Brand />
  <AboutCta call_to_action={call_to_action} />
</Base>
