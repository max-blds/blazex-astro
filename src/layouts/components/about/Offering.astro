---
import { markdownify } from "@/lib/utils/textConverter";
import { FaStar } from "react-icons/fa6";
import ImageMod from "../ImageMod.astro";

const { offering } = Astro.props;
---

<section class="section p-0" data-aos="fade-up-sm">
  <div class="container">
    <h5
      class="text-center max-xl:h6 mx-auto max-w-[951px] xl:mb-[96px] mb-8"
      set:html={markdownify(offering.title)}
      data-aos="fade-up-sm"
    />

    <div class="row gx-4 max-lg:gy-4 justify-center">
      <div class="lg:col-4 col-12" data-aos="fade-up-sm" data-aos-delay="50">
        <div
          class="flex flex-col md:flex-row lg:flex-col h-full justify-between items-center max-lg:gap-x-4 max-lg:gap-y-4 lg:gap-y-6"
        >
          <ImageMod
            src={offering.offers[0].image}
            alt={offering.offers[0].image}
            width={454}
            height={571}
            class="w-full md:w-1/2 lg:w-full rounded-xl"
          />
          <div
            class="bg-accent p-9 rounded-xl md:flex-grow w-full md:w-1/2 lg:w-full max-lg:h-full"
          >
            <h6 set:html={markdownify(offering.offers[3].title)} class="mb-2" />
            <p
              set:html={markdownify(offering.offers[3].content)}
              class="text-xl mb-24"
            />

            <h2
              set:html={markdownify(offering.offers[3].data)}
              class="lg:text-7xl xl:text-9xl"
            />
            <p set:html={markdownify("Total active user")} />
          </div>
        </div>
      </div>

      <!-- right -->
      <div class="lg:col-8 col-12">
        <div class="flex flex-col gap-6">
          <div class="flex flex-col md:flex-row w-full gap-4 lg:gap-6">
            <div
              class="w-full md:w-1/2"
              data-aos="fade-up-sm"
              data-aos-delay="100"
            >
              <ImageMod
                class="w-full rounded-xl"
                src={offering.offers[1].image}
                alt={offering.offers[1].image}
                width={354}
                height={401}
              />
            </div>

            <div
              class="md:w-1/2 bg-text rounded-xl p-9"
              data-aos="fade-up-sm"
              data-aos-delay="150"
            >
              <div class="h-full flex flex-col justify-between">
                <div>
                  <div class="mb-8">
                    <h5
                      set:html={markdownify("Impressive!")}
                      class="text-light text-xl lg:text-2xl mb-1"
                    />
                    <div class="flex items-center">
                      <FaStar className="text-tertiary text-base mr-1" />
                      <FaStar className="text-tertiary text-base mr-1" />
                      <FaStar className="text-tertiary text-base mr-1" />
                      <FaStar className="text-tertiary text-base mr-1" />
                      <FaStar className="text-tertiary text-base" />
                    </div>
                  </div>
                  <p
                    set:html={markdownify(offering.offers[2].quote)}
                    class="before:content-['“'] after:content-['”'] text-light text-sm lg:text-xl"
                  />
                </div>

                <!-- review -->
                <div
                  class="pt-6 max-md:mt-6 border-t-2 border-light/10 flex items-center justify-between"
                >
                  <div class="flex items-center gap-x-3">
                    <div>
                      <ImageMod
                        class="rounded-xl"
                        src={offering.offers[2].image}
                        alt={offering.offers[2].image}
                        width={50}
                        height={50}
                      />
                    </div>
                    <div>
                      <p
                        set:html={markdownify(offering.offers[2].author)}
                        class="text-light text-sm lg:text-lg"
                      />
                      <p
                        set:html={markdownify(offering.offers[2].role)}
                        class="text-light/70 font-normal text-sm lg:text-lg"
                      />
                    </div>
                  </div>

                  <svg
                    class="w-[43px] h-[35px] hidden lg:block"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 42.679 35"
                    ><g
                      fill="#B3FC6A"
                      clip-path="url(#svg506417314_420_clip0_8144_440)"
                      ><path
                        d="M26.473 20.4 36.445 0h6.234v35H26.473zM0 20.4 9.97 0h6.235v35H0z"
                      ></path></g
                    ></svg
                  >
                </div>
              </div>
            </div>
          </div>

          <div class="w-full" data-aos="fade-up-sm" data-aos-delay="200">
            <ImageMod
              class="w-full object-cover rounded-xl"
              src="/images/about/offer-3.png"
              alt="offer-3"
              width={804}
              height={546}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
