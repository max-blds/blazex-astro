---
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "../ImageMod.astro";

const { section_4 } = Astro.props;
---

<div class="bg-theme-light rounded-lg px-10 pt-10" data-aos="fade-up-sm">
  <div class="flex items-center justify-between mb-6">
    <h4
      class="max-xl:h5 text-center text-balance"
      data-aos="fade-up-sm"
      set:html={markdownify(section_4.title)}
    />
    <div class="bg-accent rounded-full p-3">
      <DynamicIcon icon={section_4.icon} className="text-xl" />
    </div>
  </div>

  <p
    set:html={markdownify(section_4.content)}
    class="text-balance text-lg mb-6"
    data-aos="fade-up-sm"
  />

  <div data-aos="fade-up-sm">
    <ImageMod
      class="w-full h-[209px] object-cover"
      src={section_4.image_1}
      alt={section_4.title}
      width={423}
      height={209}
    />
  </div>
</div>
