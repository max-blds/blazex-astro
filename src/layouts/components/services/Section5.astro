---
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "../ImageMod.astro";
import Icon from "@/components/Icon.astro";

const { section_5 } = Astro.props;
---

<div
  class="bg-theme-light rounded-lg p-10 flex flex-col lg:flex-row"
  data-aos="fade-up-sm"
>
  <div
    class="w-full lg:w-1/2 flex flex-col lg:flex-col lg:justify-around max-lg:mb-6"
    data-aos="fade-right-sm"
  >
    <div class="bg-accent rounded-full p-3 w-fit">
      <Icon name="code" class="w-6 h-6" />
    </div>
    <h4
      class="max-xl:h5 max-lg:mb-6"
      data-aos="fade-up-sm"
      set:html={markdownify(section_5.title)}
    />
    <p set:html={markdownify(section_5.content)} class="text-balance text-lg" />
    {section_5.highlights && (
      <div class="mt-5">
        {section_5.highlights.map((item: string) => (
          <div class="flex items-center mb-3 last:mb-0">
            <Icon name="tick" class="text-tertiary mr-3 text-lg" />
            <p set:html={markdownify(item)} class="text-xl" />
          </div>
        ))}
      </div>
    )}
  </div>
  <div class="w-full lg:w-1/2" data-aos="fade-left-sm">
    <div>
      <ImageMod
        src={section_5.image}
        alt={section_5.title}
        width={574}
        height={346}
      />
    </div>
  </div>
</div>
