---
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "../ImageMod.astro";
import Icon from "../../../components/Icon.astro";

const { section_3 } = Astro.props;
---

<div class="bg-theme-light rounded-lg px-10 pt-10 w-fit" data-aos="fade-up-sm">
  <div class="flex items-center justify-between mb-6">
    <h4
      class="max-xl:h5 text-center text-balance"
      data-aos="fade-up-sm"
      set:html={markdownify(section_3.title)}
    />
    <div class="bg-accent rounded-full p-3">
      <Icon name="workflow" class="w-6 h-6 text-primary" />
    </div>
  </div>

  <p
    set:html={markdownify(section_3.content)}
    class="text-balance mb-12 text-lg"
    data-aos="fade-up-sm"
  />

  <ImageMod
    src={section_3.image}
    alt={section_3.title}
    width={438}
    height={206}
    data-aos="fade-up-sm"
  />
</div>
